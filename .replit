args = "Streamlit Interactive Quiz"

[[workflows.workflow]]
name = "Streamlit Interactive Quiz"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cp attached_assets/questions.json questions.json && streamlit run app.py --server.port 5000"
